@model Blueapp.Models.ItemModel
@using Blueapp.Models

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.min.js"></script>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detail</h2>

<div>
    <h3>Details</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.reviewDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.reviewDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.reminder)
        </dt>

        <dd>            
            @{ 
                if (Model.reminder)
                {
                    @:Enabled
                } else
                {
                    @:Disabled
                }
            }
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.completionStatus)
        </dt>

        <dd>
            @{
                if (Model.completionStatus)
                {
                    @:Completed
                } else
                {
                    @:Pending
                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.completetionDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.completetionDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.itemType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.itemType)
        </dd>
            
    </dl>

</div>
<hr />

<h4>Approval Status</h4>
<hr />

<dl class="dl-horizontal">
    
    @if (Model.approvers != null)
    {
        foreach (UserModel user in Model.approvers)
        {
            <dt>
                @user.name
            </dt>

            <dd>
                Approved
            </dd>

        }
    } else
    {
        <dt>Not Required</dt>
        <dd />
    }
</dl>
<hr />

<h4>Distribution List</h4>
<hr />
<dd>
    @String.Join(";", Model.distributionList);
</dd>

<hr />
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
